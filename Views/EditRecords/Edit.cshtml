@model BirthdayCalendarMVC.Models.Person
@{
    var person = ViewData["Person"] as BirthdayCalendarMVC.Models.PersonDTO;
}

<h1>Изменить запись: @(person.Name) </h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="BsonId" value="@person.BsonId" />
            <div class="form-group">
                <label asp-for="Image" class="control-label">Фото</label>
                <input asp-for="Image" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Имя</label>
                <input asp-for="Name" class="form-control" value="@(person.Name)"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата</label>
                <input asp-for="Date" type="date" class="form-control" value="@(person.Date.ToString("yyyy-MM-dd"))" ) />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="@Url.Content(person.ImageUrl)" alt="Фото @person.Name" />
        <div class="person-info">
            <h2 class="person-name">@person.Name</h2>
            <p class="person-date">@person.Date.ToString("dd, MMMM, yyyy")</p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
